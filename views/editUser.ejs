<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>ASIK</title>
</head>

<body>
    <%- include('partials/navbar') %>
<br>
        <center>
            <h3>Edit User and Contact</h3>
        </center>
        <div class="container mt-4">
            <div class="card m-auto" style="width: 50%">
                <% if (errors) { %>
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                      <% errors=errors.split(',') %>
                        <% errors.forEach(el=> { %>
                          <%= el %> <br>
                            <% }) %>
                              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                    </div>
                    <% } %>
                <div class="card-body">
                    <form action="" method="post" autocomplete="off">
                        <div class="mb-3">
                            <label for="firstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="firstName" placeholder="ex: Patrick"
                                name="firstName" value="<%= user.Contact.firstName %>">
                        </div>
                        <div class="mb-3">
                            <label for="lastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="lastName" placeholder="ex: Star"
                                name="lastName" value="<%= user.Contact.lastName %>">
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone Number</label>
                            <input type="text" class="form-control" id="phone" placeholder="ex: 69696969"
                                name="phone" value="<%= user.Contact.phone %>">
                        </div>
                        <div class="mb-3">
                            <label for="address" class="form-label">Address</label>
                            <input type="text" class="form-control" id="address" placeholder="ex: PurwoDaddy"
                                name="address" value="<%= user.Contact.address %>">
                        </div>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" placeholder="ex: javascript"
                                name="username" value="<%= user.username %>">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" placeholder="ex: javascript@example.com"
                                name="email" value="<%= user.email %>">


                        </div>
                        <div class="mb-3">

                            <div class="form-group">
                                <label for="role">Penyakit</label>
                                <select class="form-control" id="role" name="DiseaseId">
                                    <option value=""  disabled >--choose the role--</option>
                                    <% diseases.forEach(x=>{%>
                                        <option value="<%= x.id%>" <%= x.id==user.DiseaseId ? 'selected' : '' %> ><%= x.name %> </option>
                                    <%}) %> 
                                </select>
                            </div>



                        </div>
                        <button type="submit" class="btn btn-outline-primary">Update</button>
                    </form>
                </div>
            </div>
        </div>
        <%- include("./partials/footer") %>

</body>

</html>